= simple_form_for @event, html: {class: "usa-form-large"} do |f|
  = f.input :name
  = f.input :max_attendees
  = f.input :description, as: :text
  div
    = f.input :category, :collection => ["official_event", "panel", "game", "outing"]
    = f.input :date, :collection => [["July 19, 2018", "2018/07/19"], ["July 20, 2018", "2018/07/20"], ["July 21, 2018", "2018/07/21"], ["July 22, 2018", "2018/07/22"]]
  fieldset
    legend = "Start Time"
    div
      .usa-input-grid.usa-input-grid-extra-small
        = f.input :start_time, as: :time, html5: true
  fieldset
    legend = "End Time"
    div
      .usa-input-grid.usa-input-grid-extra-small
        = f.input :end_time, as: :time, html5: true
  = f.submit