<div class="container">
  <div class='row'>
    <div class='col-md-12'>
      <h1 class='h1 mb-3 font-weight-normal remove-margin'>
        <img src="https://www.geeklyinc.com/images/gc2022header.jpg" class='img-fluid' alt='Geeklycon' />
      </h1>
    </div>
  </div>
  <div class="row">
    <div class='col-md-2'></div>
    <div class='col-md-8'>
      <h2 class ='h3 mb-3 font-weight-normal'>Sign up</h2> 
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="row">
            <div class="col-md-10">
              <%= f.input :email, required: true, autofocus: true, input_html: {class: 'form-control'} %>
            </div>
          </div>
          <%= render partial: 'profile', :locals=>{:f=>f} %>
          <div class="row">
            <div class="col-md-8">
              <%= f.input :password, required: true, input_html: {class: 'form-control'}, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <%= f.input :password_confirmation, required: true, input_html: {class: 'form-control'} %>
            </div>
          </div>
        </div>

        <div class="form-actions">
          <div class="row">
            <div class="col-md-5 my-1">
              <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
            </div>
          </div>
        </div>
      <% end %>
      <div class='form-actions'
        <div class="row">
          <div class="col-md-5 my-1">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    <div class='col-md-2'></div>
  </div>
</div>